<mvc:View xmlns:core="sap.ui.core" 
          xmlns:odata="sap.ui.comp.odata"
          xmlns="sap.uxap"
          xmlns:vbm="sap.ui.vbm"
          xmlns:table="sap.ui.table"
          xmlns:layout="sap.ui.layout"
          xmlns:cards="sap.f.cards"
          xmlns:f="sap.f"
          xmlns:tnt="sap.tnt" 
          controllerName="smartdesk.controller.ViewLeaves"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:m="sap.m"> 

             <f:DynamicPage>
                  <!-- Page Title -->
                   <f:title>
                        <f:DynamicPageTitle>
                            <f:heading>
                                <m:Title text="Leave Management" level="H1" class="LeaveTitle"/>
                            </f:heading>
                            
                        </f:DynamicPageTitle>
                    </f:title>

                  <!-- Page Heading  -->
                  <f:header>
                        <f:DynamicPageHeader>
                            <m:VBox>
                                <m:Title text="Remaining Leaves " level="H2"/>
                                <m:VBox>
                                   <m:Text text="Casual Leaves: {/oLeaveData/Casual}"/>
                                   <m:Text text="Paid Leaves: {/oLeaveData/Paid}"/>
                                   <m:Text text="Sick Leaves: {/oLeaveData/Sick}"/>
                                </m:VBox>
                            </m:VBox>
                        </f:DynamicPageHeader>
                    </f:header>

                    <!-- Body Content -->

                    <f:content>
                    <m:ScrollContainer>
                        <m:Panel headerText="Apply for Leave">
                            <m:VBox>
                                <m:Label text="Leave Type"/>
                                <m:Select id="leaveTypeSelect">
                                    <m:items>
                                        <core:Item key="Casual" text="Casual Leave"/>
                                        <core:Item key="Sick" text="Sick Leave"/>
                                        <core:Item key="Paid" text="Paid Leave"/>
                                    </m:items>
                                </m:Select>
                            <m:HBox class="LeaveForm">
                               <m:VBox>
                                    <m:Label text="Start Date"/>
                                    <m:DatePicker id="startDatePicker" value="{/oLeaveData/startDate}"/>
                               </m:VBox>
                               <m:VBox class="LeaveFormVertical">
                                    <m:Label text="End Date" />
                                    <m:DatePicker id="endDatePicker" value="{/oLeaveData/endDate}"/>
                               </m:VBox>
                                <m:VBox class="LeaveFormVertical">
                                    <m:Label text="No. Of Days"/>
                                    <m:Input value="{/oLeaveData/numberOfDays}"/>
                               </m:VBox>
                             </m:HBox>
                                <m:Label text="Note:" class="Reason"/>
                                <m:TextArea id="leaveReason" 
                                            rows="5" 
                                            placeholder="Enter reason for leave..." 
                                            width="40rem"
                                            value="{/oLeaveData/note}"/>
                                <m:Button text="Apply Leave" press="onApplyLeave" type="Emphasized"/>
                            </m:VBox>
                        </m:Panel>

                        <!-- Leave Records Table -->
                        <m:Panel headerText="Leave Records">
                            <m:Table id="leavesTable" items="{/aLeavesData}">
                                <m:columns>
                                    <m:Column>
                                        <m:Text text="Leave Type"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Start Date"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="End Date"/>
                                    </m:Column>
                                    <m:Column>
                                        <m:Text text="Status"/>
                                    </m:Column>
                                </m:columns>

                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:Text text="{leaveType}"/>
                                            <m:Text text="{startDate}"/>
                                            <m:Text text="{endDate}"/>
                                            <m:ObjectStatus text="{status}" state="{statusState}"/>
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </m:Panel>
                        </m:ScrollContainer>
                    </f:content>
             </f:DynamicPage>
</mvc:View>